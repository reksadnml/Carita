<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/daily_notif_switch"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Notifikasi Harian"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/daily_notif_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Notifikasi yang mengingatkan pengguna untuk membaca berita"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/language_settings_title"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Pilih Bahasa"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/language_settings_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bahasa Indonesia"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>